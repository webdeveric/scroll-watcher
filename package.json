{
  "name": "scroll-watcher",
  "title": "Scroll Watcher",
  "version": "0.2.0",
  "description": "Perform callbacks onscroll",
  "main": "lib/ScrollWatcher.bundle.js",
  "files": [
    "Gruntfile.js",
    "src/",
    "lib/"
  ],
  "scripts": {
    "babel": "babel src --out-dir lib --modules umd",
    "browserify": "browserify src/ScrollWatcher.js -t babelify -o lib/ScrollWatcher.bundle.js -s ScrollWatcher",
    "postinstall": "npm run-script babel && npm run-script browserify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webdeveric/scroll-watcher.git"
  },
  "bugs": {
    "url": "https://github.com/webdeveric/scroll-watcher/issues"
  },
  "keywords": [
    "callback",
    "onscroll",
    "scroll",
    "watcher"
  ],
  "author": {
    "email": "eric@webdeveric.com",
    "name": "Eric King",
    "url": "http://webdeveric.com/"
  },
  "private": true,
  "transform": [
    [
      "babelify",
      {
        "blacklist": [
          "regenerator"
        ]
      }
    ]
  ],
  "dependencies": {
    "babel": "^5.6.14",
    "browserify": "^10.2.4"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.20",
    "babel-jscs": "^1.0.3",
    "babelify": "^6.1.2",
    "eslint": "^0.24.0",
    "grunt": "^0.4.5",
    "grunt-babel": "^5.0.1",
    "grunt-browserify": "^3.8.0",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-eslint": "^16.0.0",
    "grunt-jscs": "^1.8.0",
    "jscs": "^1.13.1",
    "load-grunt-tasks": "~0.6.0",
    "time-grunt": "~1.0.0"
  }
}
