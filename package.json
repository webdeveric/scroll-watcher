{
  "name": "scroll-watcher",
  "title": "Scroll Watcher",
  "version": "0.4.0",
  "description": "Perform callbacks onscroll",
  "main": "lib/ScrollWatcher.cjs.js",
  "jsnext:main": "lib/ScrollWatcher.module.js",
  "files": [
    "lib/",
    "src/"
  ],
  "scripts": {
    "lint": "eslint --fix src",
    "build:cjs": "babel src -o lib/ScrollWatcher.cjs.js --no-babelrc --presets es2015",
    "build:module": "babel src -o lib/ScrollWatcher.module.js",
    "build": "npm run build:cjs && npm run build:module",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webdeveric/scroll-watcher.git"
  },
  "bugs": {
    "url": "https://github.com/webdeveric/scroll-watcher/issues"
  },
  "keywords": [
    "callback",
    "onscroll",
    "scroll",
    "watcher"
  ],
  "author": {
    "email": "eric@webdeveric.com",
    "name": "Eric King",
    "url": "http://webdeveric.com/"
  },
  "private": true,
  "dependencies": {
    "animation-frame-polyfill": "^1.0",
    "babel-cli": "^6.0",
    "babel-preset-es2015": "^6.0",
    "custom-event-polyfill": "^0.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.0",
    "eslint": "^3.0",
    "eslint-config-webdeveric": "^0.1",
    "grunt": "^1.0",
    "grunt-babel": "^6.0",
    "grunt-contrib-watch": "^1.0",
    "grunt-eslint": "^19.0"
  }
}
